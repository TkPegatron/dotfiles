#!/usr/bin/bash
# An inteligent wrapper around FCOS: Butane

if command -v podman >/dev/null; then
    cni_exec='podman'
elif command -v docker >/dev/null; then
    cni_exec='docker'
else
    echo "Failed, please install podman compatable cni engine"
fi

"$cni_exec" run --rm --interactive \ 
    --security-opt label=disable \
    --volume ${PWD}:/pwd --workdir /pwd \
    quay.io/coreos/butane:release "$@"